---
title: "Latest Articles"
pageable: true
per_page: 5
---
<div id="articles" class="container">
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <li><%= link_to "Home", uri_root_path %></li>
        <li class="active">Articles</li>
      </ol>
      <h1>Latest Articles</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-9 col-md-8 col-sm-7">
      <% page_articles.each_with_index do |article, i| %>
        <h3><%= article.title %></h3>
        <p class="article-date">
          <%= article.date.strftime('%b %e, %Y') %>
        </p>
        <p class="article-tags">
          <% article.tags.each do |tag| %>
            <span class="label label-primary"><%= tag %></span>
          <% end %>
        </p>
        <p><%= article.summary %></p>
        <p><%= link_to "Read More <i class=\"fa fa-arrow-circle-right\"></i>", article.url, :class => "btn btn-default" %></p>
      <% end %>

      <% if next_page || prev_page %>
        <nav aria-label="Page navigation">
          <ul class="pagination">
            <% if prev_page %>
              <li><%= link_to "<span aria-hidden=\"true\">&laquo;</span>", prev_page %></li>
            <% else %>
              <li class="disabled"><span aria-hidden=\"true\">&laquo;</span></li>
            <% end %>

            <% (1..num_pages).each do |i| %>
              <% next unless i > (page_number - 3) && i < (page_number + 3) %>
              <% if page_number == i %>
                <li class="active"><span><%= i %></span></li>
              <% else %>
                <li><span><%= i %></span></li>
              <% end %>
            <% end %>

            <% if next_page %>
              <li><%= link_to "<span aria-hidden=\"true\">&raquo;</span>", next_page %></li>
            <% else %>
              <li class="disabled"><span aria-hidden=\"true\">&raquo;</span></li>
            <% end %>
          </ul>
        </nav>
      <% end %>
    </div>
    <%= partial "layouts/articles_side_bar" %>
  </div>
</div>
